<?xml version="1.0"?>
<ruleset name="WordPress Coding Standards for Plugins">
	<description>Generally-applicable sniffs for WordPress plugins</description>

	<rule ref="WordPress-Core">
		<exclude name="WordPress.Files.FileName.InvalidClassFileName"/>
	</rule>

	<exclude-pattern>*/node_modules/*</exclude-pattern>
	<exclude-pattern>*/vendor/*</exclude-pattern>
	<exclude-pattern>*/build/*</exclude-pattern>
	<exclude-pattern>/lib/EDD_SL_Plugin_Updater.php</exclude-pattern>
	<exclude-pattern>/lib/classes/services/nounproject/classes/nounproject-oauth.php</exclude-pattern>
	<exclude-pattern>*/.dev/tests/*</exclude-pattern>
	<exclude-pattern>*/.dev/files/demo-site/*</exclude-pattern>
</ruleset>
